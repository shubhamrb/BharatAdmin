<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorWhite"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:paddingTop="16dp">

                        <ImageView
                            android:id="@+id/image_name"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/image_name"
                            android:text="@string/text_your_name"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="14sp"
                            android:theme="@style/TextViewRegular" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_name"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/image_name"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19sp"
                            android:theme="@style/TextViewBold2"
                            tools:text="Kisslove Dewangan" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:padding="12dp"
                            android:src="@drawable/ic_mode_edit_black_24dp"
                            android:tint="@color/colorLightGrey" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_name"
                            android:layout_alignLeft="@+id/tv_name"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorDivider" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_institute_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:paddingTop="16dp">

                        <ImageView
                            android:id="@+id/iv_institute_name"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/text_institute_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/iv_institute_name"
                            android:text="@string/text_institute_name"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="14sp"
                            android:theme="@style/TextViewRegular" />

                        <TextView
                            android:id="@+id/tv_institute_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_institute_name"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/iv_institute_name"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19sp"
                            android:theme="@style/TextViewBold2"
                            tools:text="KD Classes" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:padding="12dp"
                            android:src="@drawable/ic_mode_edit_black_24dp"
                            android:tint="@color/colorLightGrey" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_institute_name"
                            android:layout_alignLeft="@+id/tv_institute_name"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorDivider" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_insitute_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rl_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/image_share"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_chat_black_24dp"
                            android:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/text_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_toRightOf="@+id/image_share"
                            android:text="@string/text_customer_support"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19sp"
                            android:theme="@style/TextViewBold2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/text_chat"
                            android:layout_alignLeft="@+id/text_chat"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorDivider" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_chat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rl_watch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/image_watch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_action_share"
                            android:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/text_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_toRightOf="@+id/image_watch"
                            android:text="@string/text_share_student_app"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19sp"
                            android:theme="@style/TextViewBold2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/text_share"
                            android:layout_alignLeft="@+id/text_share"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorDivider" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_share"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/image_rate"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_star_black_24dp"
                            android:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/text_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/image_rate"
                            android:text="@string/text_rate_us"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19sp"
                            android:theme="@style/TextViewBold2" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="74dp"
            android:scaleType="centerInside"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_5" />
    </RelativeLayout>
</RelativeLayout>