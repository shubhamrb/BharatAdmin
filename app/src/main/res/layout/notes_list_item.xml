<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_notes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/iv_edit"
            android:textColor="@color/colorPrimaryText"
            android:textSize="19sp"
            android:theme="@style/TextViewBold2"
            tools:text="Whatsapp Group" />

        <TextView
            android:id="@+id/tv_notes_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notes_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/colorPrimaryText"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:theme="@style/TextViewRegular"
            tools:text="http://chat.whatsapp.com/hgskigis" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:padding="12dp"
            android:src="@drawable/ic_mode_edit_black_24dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
